<!--우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <ol class="breadcrumb mt-3">
            <li>
                <a href="/">Home ></a>
            </li>
            <li>
                <a>&nbsp게시글정보관리 ></a>
            </li>
            <li class="active">
                <strong>&nbsp게시글등록</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
        <form id="createform" action="/boards/create" method="post">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">제목</label>
                        <input
                            type="text"
                            name="title"
                            id="title"
                            class="form-control"
                        />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">내용</label>
                        <textarea
                            name="contents"
                            id="contents"
                            class="form-control"
                            rows="10"
                            cols="5"
                        ></textarea>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">사용여부</label>
                        <div class="form-group">
                            <select
                                id="display"
                                name="display"
                                class="form-control"
                            >
                                <option value="Y">게시함</option>
                                <option value="N">게시안함</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">저장</button>
                <a href="/boards/list" class="btn btn-info">목록</a>
            </div>
        </form>
    </div>
</div>

<script>
    "use strict";
    //html요소가 웹브라우저에 모두 렌더링 완료되면 실행되는 메소드ready()
    $(document).ready(function () {
        console.log("페이지가 모두 로딩되었습니다.");
    });

    //서버로 전달하기전에 입력값 유효성 검사 처리하기
    $("#createform").submit(function () {
        if ($("#title").val() == "") {
            alert("제목을 입력해주세요.");
            $("#title").focus();
            return false;
        }

        if ($("#contents").val() == "") {
            alert("내용을 입력해주세요.");
            $("#contents").focus();
            return false;
        }

        //서버로 입력 데이터를 전송합니다.
        return true;
    });
</script>
